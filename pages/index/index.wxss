/* pages/combine/combine.wxss */
.bgPic,
.emptyBg {
  background-color: #eee;
}

.image-parent {
  position: relative;
}

.child {
  width: 100%;
  height: 24px;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 5rpx;
  margin: auto;
  text-align: center;
  background: white;
  background: rgb(255, 255, 255, 0.5);
}

.hat-active {
  position: absolute;
  border: dashed 2px yellow;
}

.hat {
  position: absolute;
  border: none;
}

.handle {
  position: absolute;
  z-index: 1;
  width: 40rpx;
  height: 40rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-position: center;
  border-radius: 10px;
  background-color: #39b94a;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 30rpx;
  width: 100vw;
  max-height: 10vh;
  z-index: 999;
}
.button-group button{
  width: 40vw;
}

.card-swiper {
	height: 35vh !important;
}

/* 顶部合成图 */
.head{
  min-height: 40vh;
}
.head view{
  box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
}

/* 生成的图片 */
.gen-img{
  box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
}
.info_btn{
	position: fixed;
	right: 10rpx;
    bottom: 100rpx;
}
.info_btn image{
    width: 130rpx;
	height: 130rpx;
	border-radius: 50%;
	/* border: 2px solid #fff; */
	box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}